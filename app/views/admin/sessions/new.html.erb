<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-3 text-center">
          <h3>ログイン</h3>
        </div>
      </div>
      <div class="col-7"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row mt-4">
        <div class="col">
          <div class="col-6 text-center">
            <h5><%= f.label :メールアドレス %></h5>
          </div>
          <div class="col-10 mt-2 text-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:57%;" %>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col">
          <div class="col-6 text-center">
            <h5><%= f.label :パスワード %></h5>
          </div>
          <div class="col-10 mt-2 text-center">
             <%= f.password_field :password, autocomplete: "current-password", style: "width:57%;" %>
          </div>
        </div>
      </div>
      <div class="row mt-4 mb-1">
        <div class="col-10 text-center">
          <%= f.submit "ログイン", class: "btn btn-sm btn-primary", style: "width:30%;" %>
        </div>
      </div>
    <% end %>
    <div class="row mt-4 mb-1">
      <div class="col-10 text-center">
        <%= link_to "管理者ログイン(閲覧用)", admin_guests_guest_sign_in_path, method: :post, class: "btn btn-sm btn-success", style: "width:30%;" %>
      </div>
    </div>
  </div>
</main>
