<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-5 text-center">
          <h3>会員一覧</h3>
        </div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <table class="table">
        <thead>
         <tr class="table-active">
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">登録日</th>
         </tr>
        </thead>
        <% @users.each do |users| %>
        <tbody class="table-boederless">
          <tr>
            <th scope="row"><%= users.id %></th>
            <td>
              <%= link_to admin_user_path(users.id) do %>
              <%= image_tag users.get_profile_image(70,70) %>
              <%= users.name %>
              <% end %>
            </td>
            <td><%= users.email %></td>
            <td><%= users.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        </tbody>
        <% end %>
    </div>
  </div>
</main>