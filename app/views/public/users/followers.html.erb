<main>
  <div class="container">
    <div class="row">
      <div class="col-4 mt-5 mb-1 text-center">
          <h2>フォロワー</h2>
      </div>
    </div>
    <div class="row">
      <table class="table">
        <% @users.each do |users| %>
        <tbody class="table-boederless">
          <tr>
            <th scope="row ml-5">
              <%= link_to user_path(users) do %>
              <%= image_tag users.get_profile_image(60,60) %>　<%= users.name %>
              <% end %>
            </th>
            <td><%= users.introduction %></td>
            <td>
              <% if current_user != users %>
              <% if current_user.following?(users) %>
              <%= link_to 'フォロー外す', user_relationships_path(users), method: :delete, class: "btn-sm btn-danger" %>
              <% else %>
              <%= link_to 'フォローする', user_relationships_path(users), method: :POST, class:"btn-sm btn-success" %>
              <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</main>