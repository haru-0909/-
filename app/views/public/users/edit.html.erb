<main>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="mt-5 mb-5 text-center">
          <h2>プロフィール</h2>
        </div>
      </div>
    </div>
    <%= form_with model: @user, method: :patch do |f| %>
      <div class="row text-right">
        <div class="col-1"></div>
        <label class="col-2 mt-4">
         <h5>アイコン変更</h5>
        </label>
        <div class="col-4 mt-3">
      　  <%= f.file_field :image, accept: "image/*" %>
      　</div>
      </div>
      <div class="row mt-3">
        <div class="col-2"></div>
        <label class="col-1 mt-4">
          <h5>名前</h5>
        </label>
        <div class="col-4">
      　 <%= f.text_field :name, style: "width:100%;" %>
      　</div>
      </div>
      <div class="row text-right">
        <div class="col-1"></div>
        <label class="col-2 mt-4">
          <h5>自己紹介</h5>
        </label>
        <div class="col-5">
      　  <%= f.text_area :introduction, style: "width:100%; height:250px;" %>
      　</div>
      </div>
      <div class="row mt-2">
        <div class="col-10 text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-sm btn-primary", style: "width:35%; height:50px;" %>
        </div>
      </div>
    <% end %>
  </div>
</main>
