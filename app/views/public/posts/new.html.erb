<main>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="mt-5 mb-5 text-center">
          <h2>新規投稿</h2>
        </div>
      </div>
    </div>

      <%= form_with model: @post do |f| %>
      <div class="row">
        <div class="col-2"></div>
        <label class="col-1 mt-4">
          <h5>施設名</h5>
        </label>
        <div class="col-4">
      　 <%= f.text_field :title, style: "width:100%;" %>
      　</div>
      </div>
      <div class="row text-right">
        <div class="col-2"></div>
        <label class="col-1 mt-4">
          <h5>内容</h5>
        </label>
        <div class="col-4">
      　  <%= f.text_area :caption, style: "width:100%; height:160px;" %>
      　</div>
      </div>
      <div class="row text-right">
        <div class="col-1"></div>
        <label class="col-2 mt-4">
         <h5>画像を追加</h5>
        </label>
        <div class="col-4 mt-3">
      　  <%= f.file_field :image, accept: "image/*" %>
      　</div>
      </div>
      <div class="row mt-2">
        <div class="col-10 text-center">
          <%= f.submit "投稿する", class: "btn btn-sm btn-primary", style: "width:35%; height:50px;" %>
        </div>
      </div>
      <% end %>
  </div>
</main>
