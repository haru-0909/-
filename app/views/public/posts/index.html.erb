<main>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="mt-5 mb-5 text-center">
          <h2>みんなの投稿</h2>
        </div>
      </div>
    </div>

    <% @posts.each do |posts| %>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-4">
        <%= posts.user.name %></br>
        <%= posts.title %></br>
        <%= posts.caption %></br>
        <%= image_tag posts.get_image, size: "200x200" %>
      </div>
    </div>
    <% end %>
  </div>
</main>