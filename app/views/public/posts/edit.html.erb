<main>
  <div class="container">
      <%= form_with model: @post, method: :patch do |f| %>
      <div class="row mt-5">
        <div class="col-2"></div>
        <label class="col-1 mt-4">
          <h5>施設名</h5>
        </label>
        <div class="col-4">
      　 <%= f.text_field :title, style: "width:100%;" %>
      　</div>
      </div>
      <div class="row text-right">
        <div class="col-2"></div>
        <label class="col-1 mt-4">
          <h5>内容</h5>
        </label>
        <div class="col-5">
      　  <%= f.text_area :caption, style: "width:100%; height:250px;" %>
      　</div>
      </div>
      <div class="row text-right">
        <div class="col-1"></div>
        <label class="col-2 mt-4">
         <h5>画像を追加</h5>
        </label>
        <div class="col-4 mt-3">
      　  <%= f.file_field :image, accept: "image/*" %>
      　</div>
      </div>
      <div class="row text-right">
        <div class="col-1"></div>
        <label class="col-2 mt-4">
         <h5>住所</h5>
        </label>
        <div class="col-4">
      　 <%= f.text_field :address, autofocus: true,placeholder: "住所を入力してください", style: "width:100%;" %>
      　</div>
      </div>
      <div class="row mt-2">
        <div class="col-10 text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-sm btn-primary", style: "width:35%; height:50px;" %>
        </div>
      </div>
      <% end %>
  </div>
</main>
