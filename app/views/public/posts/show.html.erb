<main>
  <div class="container">
    <div class="row mt-5">
      <div class="col-2"></div>
      <div class="col-5">
        <h2><%= @post.title %> </h2>
      </div>
      <div class="col-1">
        <button type="button" class="btn btn-outline-danger">
          <%= link_to '削除', post_path(@post.id), class: "text-dark", method: :delete, "data-confirm" => "本当に消しますか？" %>
        </button>
      </div>
      <div class="col-1">
        <button type="button" class="btn btn-outline-info">
          <%= link_to '編集', edit_post_path(@post.id), class: "text-dark" %>
        </button>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-2"></div>
      <div class="pl-5 col-6">
        <h4><%= image_tag @user.get_profile_image(100,100) %><%= @post.user.name %></h4>
        <%= @post.created_at.strftime('%Y/%m/%d') %>
        <div class="mt-3">
          <h5><%= @post.caption %></h5>
        </div>
        <div class="mt-3">
          <% if @post.image.attached? %>
          <%= image_tag @post.image, size: "300x250" %>
          <% end %>
        </div>
        いいね　コメント機能
      </div>
    </div>
  </div>
</main>