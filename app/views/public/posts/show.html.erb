<main>
  <div class="container">
    <div class="row mt-5">
      <div class="col-2"></div>
      <div class="col-6">
        <h4><%= @post.user.name %></h4>
        <%= @post.created_at.strftime('%Y/%m/%d') %>
        <div class="pl-4 mt-3">
          <h3><%= @post.title %> </h3>
        </div>
        <div class="pl-4 mt-3">
          <h5><%= @post.caption %></h5>
        </div>
        <div class="pl-4 mt-3">
          <% if @post.image.attached? %>
          <%= image_tag @post.image, size: "300x250" %>
          <% end %>
        </div>
        いいね　コメント機能
      </div>
      <div class="col-2">
        <button type="button" class="btn btn-outline-info">
          <%= link_to '編集', edit_post_path(@post.id), class: "text-dark" %>
        </button>
      </div>
    </div>
  </div>
</main>